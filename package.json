{
    "name": "lottie-viewer",
    "displayName": "Lottie Viewer",
    "description": "Preview Lottie animations while you edit them",
    "version": "0.0.1",
    "author": "William DA SILVA <william.da.silva@outlook.com>",
    "publisher": "williamdasilva",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.lottieView"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.lottieView",
                "title": "Lottie Preview"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "extension.lottieView",
                    "when": "resourceLangId == json"
                }
            ]
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "lottie-web": "^5.1.10"
    }
}
